{
  "name": "REPLACE_ME",
  "description": "REPLACE_ME",
  "author": "REPLACE_ME",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "REPLACE_ME",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:css",
    "onLanguage:less",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html",
    "onLanguage:markdown",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:jsx",
    "onLanguage:javascriptreact",
    "onLanguage:tsx",
    "onLanguage:typescriptreact",
    "workspaceContains:**/package.json"
  ],
  "main": "./client/out/vscode",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --build",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  },
  "contributes": {
    "languages": [
      {
        "id": "nunjucks",
        "aliases": ["Nunjucks", "nunjucks"],
        "extensions": [".njk", ".nunjucks", ".html"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Nunjucks LSP Configuration",
      "properties": {
        "nunjucksLsp.templatePaths": {
          "type": "array",
          "default": ["./templates", "./views"],
          "description": "Paths to search for Nunjucks templates"
        }
      }
    }
  }
}
