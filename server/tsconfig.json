{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "incremental": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "@core/*": [
        "../core/out/*",
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"],

  "references": [
    { "path": "../core" },
  ]
}
